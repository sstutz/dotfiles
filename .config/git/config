[include]
    # store [user], [credentials], etc in a local file
    path = ~/.config/git/config.local

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    changed = blue bold
    untracked = magenta bold

[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.config/git/ignore_global

[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log --graph --pretty=format:'%Cred%h -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>'
    st = status -sb
    co = checkout
    br = branch
    ci = commit
    pushall = push --recurse-submodules=on-demand
    d = difftool
    vimdiff = "!GIT_PAGER=" GIT_EXTERNAL_DIFF="git_diff_wrapper git diff"
    info = ! "gitinfo(){ if git rev-parse ${1} >/dev/null 2>&1; then git cat-file -p $(git rev-parse ${1}); else echo Invalid object; fi }; gitinfo"
    credit = shortlog -sn
    exec = ! "exec"
    ctags = !.git/hooks/ctags
	up = pull --rebase --autostash

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = splice

[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true

[push]
    default = matching

[credential]
    helper = store --file ~/.config/git/credentials

[commit]
    template = ~/.config/git/message

[user]
    useConfigOnly = true
